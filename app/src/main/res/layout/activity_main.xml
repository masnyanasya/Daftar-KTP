<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="id.sch.smktelkom_mlg.tugas01.xiirpl2027.formpendaftaransmktelkommalang.MainActivity">

        <TextView
            android:id="@+id/textViewNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="304dp"
            android:text="Nama Lengkap : "
            android:textColor="@android:color/black"
            android:textSize="23dp" />

        <EditText
            android:id="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView"
            android:layout_alignStart="@+id/imageView"
            android:layout_alignTop="@+id/textViewNama"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="-10dp"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/textViewGolrah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="354dp"
            android:text="Gol Darah          : "
            android:textColor="@android:color/black"
            android:textSize="23dp" />

        <EditText
            android:id="@+id/Golrah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView"
            android:layout_alignStart="@+id/imageView"
            android:layout_alignTop="@+id/textViewNama"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/textViewno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Golrah"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="23dp"
            android:text="No Telepon       :"
            android:textColor="@android:color/black"
            android:textSize="23dp" />

        <EditText
            android:id="@+id/no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView"
            android:layout_alignStart="@+id/imageView"
            android:layout_alignTop="@+id/textViewNama"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="95dp"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/textViewTL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="464dp"
            android:text="Tanggal Lahir   : "
            android:textColor="@android:color/black"
            android:textSize="23dp" />

        <EditText
            android:id="@+id/TL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView"
            android:layout_alignStart="@+id/imageView"
            android:layout_alignTop="@+id/textViewNama"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="150dp"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/textViewAlamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="515dp"
            android:text="Alamat              : "
            android:textColor="@android:color/black"
            android:textSize="23dp" />

        <EditText
            android:id="@+id/Alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView"
            android:layout_alignStart="@+id/imageView"
            android:layout_alignTop="@+id/textViewNama"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="195dp"
            android:ems="10"
            android:inputType="text" />


        <CheckBox
            android:id="@+id/checkBoxIslam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewAgama"
            android:layout_marginTop="10dp"
            android:text="Islam"
            android:textSize="20dp" />

        <CheckBox
            android:id="@+id/checkBoxKristen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewAgama"
            android:layout_marginTop="40dp"
            android:text="Kristen"
            android:textSize="20dp" />

        <CheckBox
            android:id="@+id/checkBoxKatholik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewAgama"
            android:layout_marginTop="70dp"
            android:text="Katholik"
            android:textSize="20dp" />

        <CheckBox
            android:id="@+id/checkBoxBudha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewAgama"
            android:layout_marginTop="100dp"
            android:text="Budha"
            android:textSize="20dp" />

        <CheckBox
            android:id="@+id/checkBoxKonghuchu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewAgama"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="10dp"
            android:text="Konghuchu"
            android:textSize="20dp" />

        <CheckBox
            android:id="@+id/checkBoxVolly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewAgama"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="40dp"
            android:text="Tidak Beragama"
            android:textSize="20dp" />


        <Button
            android:id="@+id/buttonDaftar"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBoxBudha"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bgbtn"
            android:text="Daftar"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/hnama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profil"
            android:layout_marginTop="50dp"
            android:text="Nama                   :"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/hgolrah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hnama"
            android:layout_marginTop="20dp"
            android:text="Gol Darah                    :"
            android:textColor="@android:color/black"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/hno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hnama"
            android:layout_marginTop="60dp"
            android:text="No Telepon         :"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/htl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hnama"
            android:layout_marginTop="100dp"
            android:text="Tanggal Lahir     :"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/halamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hnama"
            android:layout_marginTop="140dp"
            android:text="Alamat      :"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/hagama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hnama"
            android:layout_marginTop="180dp"
            android:text="Agama                :"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/hjeniskelamin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hnama"
            android:layout_marginTop="220dp"
            android:text="Jenis Kelamin   :"
            android:textColor="@android:color/black"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/hstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hnama"
            android:layout_marginTop="260dp"
            android:text="Jurusan             :"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/hkecamatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hnama"
            android:layout_marginTop="300dp"
            android:text="Asal                    :"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/profil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="63dp"
            android:text="Profil Pendaftar"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="30dp"
            android:layout_below="@+id/buttonDaftar" />

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:text="Pendaftaran KTP "
            android:textColor="@android:color/holo_red_dark"
            android:textSize="@dimen/abc_action_button_min_width_overflow_material"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textViewTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:text="Kota Blitar"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="25dp"
            android:layout_above="@+id/nama"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="19dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:src="@drawable/logoblitar"
            tools:src="@drawable/logoblitar"
            android:layout_below="@+id/textViewTitle"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textViewJK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:text="Jenis Kelamin : "
            android:textColor="@android:color/black"
            android:textSize="23dp"
            android:layout_below="@+id/textViewAlamat"
            android:layout_alignLeft="@+id/textViewAlamat"
            android:layout_alignStart="@+id/textViewAlamat" />

        <GridLayout
            android:id="@+id/gridLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewJK"
            android:layout_toRightOf="@+id/checkBoxBudha"
            android:layout_toEndOf="@+id/checkBoxBudha">

            <RadioGroup
                android:id="@+id/jeniskelamin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/laki"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Laki-laki"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/perempuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perempuan"
                    android:textSize="20dp" />
            </RadioGroup>
        </GridLayout>

        <TextView
            android:id="@+id/textViewStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:text="Pilih Status   : "
            android:textColor="@android:color/black"
            android:textSize="23dp"
            android:layout_below="@+id/gridLayout2"
             />

        <GridLayout
            android:id="@+id/gridLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewStatus"
            >

            <RadioGroup
                android:id="@+id/jurussan"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

            </RadioGroup>
        </GridLayout>

        <TextView
            android:id="@+id/textViewAsal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:text="Kecamatan : "
            android:textColor="@android:color/black"
            android:textSize="23dp"
            android:layout_below="@+id/gridLayout1"
            android:layout_alignLeft="@+id/textViewStatus"
            android:layout_alignStart="@+id/textViewStatus" />

        <Spinner
            android:id="@+id/spinnerkecamatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/provinsi"
            android:layout_alignBaseline="@+id/textViewAsal"
            android:layout_alignBottom="@+id/textViewAsal"
            android:layout_toRightOf="@+id/hagama"
            android:layout_toEndOf="@+id/hagama" />

        <TextView
            android:id="@+id/textViewAgama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agama : "
            android:textColor="@android:color/black"
            android:textSize="23dp"
            android:layout_below="@+id/spinnerkelurahan"
            android:layout_alignLeft="@+id/textViewJK"
            android:layout_alignStart="@+id/textViewJK" />

        <RadioButton
            android:id="@+id/belum_menikah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Belum Menikah"
            android:textSize="20dp"
            android:layout_alignBottom="@+id/gridLayout1"
            android:layout_alignLeft="@+id/Alamat"
            android:layout_alignStart="@+id/Alamat" />

        <RadioButton
            android:id="@+id/menikah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Menikah"
            android:textSize="20dp"
            android:layout_alignBaseline="@+id/belum_menikah"
            android:layout_alignBottom="@+id/belum_menikah"
            android:layout_alignRight="@+id/textViewAlamat"
            android:layout_alignEnd="@+id/textViewAlamat" />

        <Spinner
            android:id="@+id/spinnerkelurahan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_below="@+id/spinnerkecamatan"
            android:layout_alignRight="@+id/gridLayout2"
            android:layout_alignEnd="@+id/gridLayout2" />


    </RelativeLayout>
</ScrollView>